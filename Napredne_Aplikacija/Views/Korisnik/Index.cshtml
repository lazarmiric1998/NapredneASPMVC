@model IEnumerable<Napredne_Aplikacija.Models.Korisnik>
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<ExtendedKorisnik> signInManager;

@{
    ViewData["Title"] = "Index";
}

<h1>Korisnici</h1>

<p>
    <a asp-action="DodajKorisnika">Dodaj novog korisnika</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prezime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KorisnickoIme)
            </th>
            @if (signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
            {
                <th>
                    @Html.DisplayNameFor(model => model.Sifra)
                </th>
            }
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prezime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pol)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grad)
            </td>

            @if (signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
            {
                <td>
                    @Html.DisplayFor(modelItem => item.KorisnickoIme)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sifra)
                </td>


                <td>
                    <a asp-action="Edit" asp-route-id="@item.KorisnikID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.KorisnikID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.KorisnikID">Delete</a>
                </td>
            }
        </tr>
        }
    </tbody>
</table>
